<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pwx.hrmapp.dao.UserDao">

    <sql id="baseColumn" >
        id, username, loginname, password, status, createDate
    </sql>

    <!--根据登录名和密码查询用户-->
    <select id="selectByLoginnameAndPassword" resultType="com.pwx.hrmapp.entity.User" parameterType="java.lang.String">
        select
        <include refid="baseColumn" />
        from hrm_db.tb_user_inf
        where loginname = #{loginname} and password = #{password}
    </select>

    <!--根据ID查询用户-->
    <select id="selectById" resultType="com.pwx.hrmapp.entity.User" parameterType="java.lang.String">
        SELECT
        <include refid="baseColumn" />
        FROM hrm_db.tb_user_inf
        WHERE ID = #{id}
    </select>

    <!--插入用户-->
    <insert id="saveUser" parameterType="com.pwx.hrmapp.entity.User">
        INSERT INTO hrm_db.tb_user_inf(LOGINNAME, PASSWORD, USERNAME) VALUES
            (#{loginname}, #{password}, #{username})
    </insert>

    <!--根据id删除用户-->
    <select id="deleteUser" parameterType="java.lang.String">
        DELETE FROM hrm_db.tb_user_inf WHERE ID = #{id}
    </select>

    <!--根据id修改用户-->
    <update id="updateUser" parameterType="com.pwx.hrmapp.entity.User">
        UPDATE hrm_db.tb_user_inf
            <set>
                <if test="username != null">username=#{username},</if>
                <if test="loginname != null">loginname=#{loginname},</if>
                <if test="password != null">password=#{password},</if>
                <if test="status != null">status=#{status}</if>
            </set>
        WHERE id=#{id}
    </update>

    <!--分页动态查询-->
    <select id="selectByParam" parameterType="hashMap" resultType="com.pwx.hrmapp.entity.User">
        SELECT <include refid="baseColumn" /> FROM hrm_db.tb_user_inf
        <where>
            <if test="username != null">
                username LIKE concat('%', #{username}, '%')
            </if>
            <if test="status != null">
                and status LIKE concat('%', #{status}, '%')
            </if>
        </where>
        <choose>
            <when test="start != null and size != null">
                ORDER BY CREATEDATE DESC LIMIT #{start}, #{size}
            </when>
            <when test="start != null">
                ORDER BY CREATEDATE DESC LIMIT #{start}
            </when>
            <otherwise>
                ORDER BY CREATEDATE DESC
            </otherwise>
        </choose>
    </select>
</mapper>